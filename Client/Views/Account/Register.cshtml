@model Shared.UserInfo

@{
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}
<div class="col-lg-6 d-flex align-items-center justify-content-center">
    <div class="auth-form-transparent text-left p-3">
        <h6 class="font-weight-light">Join us today! It takes only few steps</h6>
        <form asp-action="Register" asp-controller="Account" method="POST" class="pt-3">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="FirstName" type="text" required class="form-control form-control-lg border-left-0" i placeholder="First Name">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="LastName" type="text" required class="form-control form-control-lg border-left-0" i placeholder="Last Name">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName">User Name</label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="UserName" type="text" required class="form-control form-control-lg border-left-0" i placeholder="User Name">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="Email" type="text" required class="form-control form-control-lg border-left-0" i placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-primary"></i>
                        </span>
                    </div>
                    <input asp-for="Password" type="password" required class="form-control form-control-lg border-left-0" i placeholder="Password">
                </div>
            </div>
            <div class="my-3">
                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">REGISTER</button>
            </div>
        </form>
    </div>
</div>


