@using Shared
@model Match

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
        <h4 class="card-title">Edit</h4>
            <form asp-action="Edit" asp-controller="Matches" method="POST" class="forms-sample">
                @Html.AntiForgeryToken()
                <input type ="hidden" asp-for="MatchOdds.Id" />
                <input type ="hidden" asp-for="MatchOdds.MatchId" />
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                </div>
                <div class="form-group">
                    <label asp-for="TeamA">Team A</label>
                    <input asp-for="TeamA" type="text" class="form-control" placeholder="Team A">
                </div>
                <div class="form-group">
                    <label asp-for="TeamB">Team B</label>
                    <input asp-for="TeamB" type="text" class="form-control" placeholder="Team B">
                </div>
                <div class="form-group">
                    <label asp-for="MatchDate">Match Date</label>
                    <input asp-for="MatchDate" type="date" class="form-control" placeholder="Match Date">
                </div>
                <div class="form-group">
                    <label asp-for="MatchTime">Match Time</label>
                    <input asp-for="MatchTime" type="time" class="form-control" placeholder="Match Time">
                </div>

                <div class="form-group">
                    <label asp-for="Sport"></label>
                    <select asp-for="Sport" asp-items="Html.GetEnumSelectList<Sport>()" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MatchOdds.Specifier">Specifier</label>                                                                      e
                    <input asp-for="MatchOdds.Specifier" type="text" class="form-control" maxlength="1" placeholder="Specifier">
                </div>
                <div class="form-group">
                    <label asp-for="MatchOdds.Odd">Odd</label>
                    <input asp-for="MatchOdds.Odd" type="text" class="form-control" placeholder="Odd">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
            </form>
        </div>
    </div>
</div>
           
        
        